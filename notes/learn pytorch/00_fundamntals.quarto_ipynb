        "print(f\"Scalar: {scalar}\")\n",
        "print(f\"Number of dimensions: {scalar.ndim}\")\n",
        "print(f\"Shape: {scalar.shape}\")\n",
        "print(f\"Get Python number from tensor: {scalar.item()}\")\n",
        "print(f\"Data type: {scalar.dtype}\")"
